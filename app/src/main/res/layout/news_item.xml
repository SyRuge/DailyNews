<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:layout_marginRight="5dp"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:lines="2"
        android:maxLines="2"
        android:text="撒旦发所大撒所多打上单撒按时打算多阿萨斯多熬啊所大撒所阿萨德"
        android:layout_marginLeft="7dp"
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_news_pic"
        android:layout_toEndOf="@+id/iv_news_pic"
        android:layout_marginTop="5dp"/>


    <TextView
        android:textColor="@color/secondary_text"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextViewsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdffsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_news_detail"
        android:layout_below="@+id/tv_news_title"
        android:layout_alignLeft="@+id/tv_news_title"
        android:layout_alignStart="@+id/tv_news_title"
        android:layout_marginTop="2dp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        app:placeholderImage="@drawable/default_img"
        android:id="@+id/iv_news_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_news_detail"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:text="11-02 08:05:39"
        android:textColor="@color/secondary_text"
        android:textSize="10sp"/>

    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_news_date"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>

</RelativeLayout>