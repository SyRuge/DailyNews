<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <ImageView

        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="240dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/drawer"/>

    <TextView
         android:id="@+id/tv_drawer_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/dailynews"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="新闻"
        android:textColor="@color/primary_text"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_drawer_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/photo"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="图片"
        android:textColor="@color/primary_text"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_drawer_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/movie"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="视频"
        android:textColor="@color/primary_text"
        android:textSize="15sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="设置"
        android:textColor="@color/secondary_text"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="夜间模式"
        android:textColor="@color/primary_text"
        android:textSize="15sp"/>


</merge>