<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <ImageView

        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="240dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/drawer"/>



    <TextView
        android:clickable="true"
         android:id="@+id/tv_drawer_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/dailynews"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="新闻"
        android:textColor="@color/primary_text"
        android:textSize="15sp"/>

    <TextView
        android:clickable="true"
        android:id="@+id/tv_drawer_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/photo"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="图片"
        android:textColor="@color/primary_text"
        android:textSize="15sp"/>

    <TextView
        android:clickable="true"
        android:id="@+id/tv_drawer_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/collect_drawer"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="收藏"
        android:textColor="@color/primary_text"
        android:textSize="15sp"/>


</merge>