<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_news_other_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/primary_text"
        android:textSize="16sp"/>

    <LinearLayout

        android:id="@+id/ll_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_news_other_title"
        android:orientation="horizontal"
        android:padding="5dp">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_other_only"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:visibility="gone"
            app:placeholderImage="@drawable/ic_launcher"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_other_first"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            app:placeholderImage="@drawable/default_img"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_other_second"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            app:placeholderImage="@drawable/default_img"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_news_other_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_pic"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:text="11-02 08:05:39"
        android:textColor="@color/secondary_text"
        android:textSize="10sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_news_other_date"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/divider"/>

</RelativeLayout>