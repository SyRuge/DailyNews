<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                 android:id="@+id/rl_foot_root"
                android:layout_height="wrap_content"

                >

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textColor="@color/secondary_text"
            android:id="@+id/tv_footer_nodata"
            android:textSize="15sp"
            android:text="没有更多数据了..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/primary_text"
             android:id="@+id/tv_footer_refresh"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:text="加载中..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.xcx.dailynews.mvp.ui.view.ProgressBarCircularIndeterminate
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_footer_refresh"
            android:id="@+id/pb_footer"
            android:layout_width="32dp"
            android:layout_height="32dp"
             />


    </RelativeLayout>


</RelativeLayout>